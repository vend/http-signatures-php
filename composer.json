{
    "name": "vend/http-signatures-php",
    "description": "Sign and verify PSR-7 HTTP messages with HMAC and RSA keys",
    "keywords": ["http", "https", "signing", "signed", "signature", "hmac", "rsa", "digital signature", "electronic signature"],
    "license": "MIT",
    "authors": [
        {
            "name": "Liam Dennehy",
            "email": "liam@wiemax.net"
        },
        {
            "name": "Paul Annesley",
            "email": "paul@99designs.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HttpSignatures\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HttpSignatures\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "psr/http-message": "^1.0",
        "phpseclib/phpseclib": "~3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "guzzlehttp/psr7": "^1.2",
        "phpunit/phpunit": "~9.5",
        "symfony/http-foundation": "~6.2",
        "symfony/psr-http-message-bridge": "^2.1.4",
        "laminas/laminas-diactoros": "^2.22",
        "nyholm/psr7": "^1.1",
        "nyholm/psr7-server": "^1.0",
        "kriswallsmith/buzz": "^1.0",
        "laminas/laminas-httphandlerrunner": "^2.4",
        "vimeo/psalm": "^5.1.0"
    }
}
