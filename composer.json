{
    "name": "liamdennehy/http-signatures-php",
    "description": "Sign and verify PSR-7 HTTP messages with HMAC and RSA keys",
    "keywords": ["http", "https", "signing", "signed", "signature", "hmac", "rsa", "digital signature", "electronic signature"],
    "license": "MIT",
    "authors": [
        {
            "name": "Liam Dennehy",
            "email": "liam@wiemax.net"
        },
        {
            "name": "Paul Annesley",
            "email": "paul@99designs.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HttpSignatures\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HttpSignatures\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.6",
        "paragonie/random_compat": "^1.0|^2.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2",
        "guzzlehttp/psr7": "^1.2",
        "phpunit/phpunit": "~5.6",
        "symfony/http-foundation": "~2.8|~3.0",
        "symfony/psr-http-message-bridge": "^1.0.2",
        "zendframework/zend-diactoros": "^1.1"
    }
}
